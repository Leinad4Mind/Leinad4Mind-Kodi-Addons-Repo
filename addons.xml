        <import addon="xbmc.python" version="2.1.0"/>
		<import addon="script.module.t0mm0.common" version="1.0.0"/>
		<import addon="script.module.requests" version="2.6.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="chomiteca.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="pt_PT">Conteúdos dos sites Minhateca.com.br e Chomikuj.pl no Kodi</summary>
        <summary lang="pt_BR">Conteúdos dos sites Minhateca.com.br e Chomikuj.pl no Kodi</summary>
